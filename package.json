{
  "name": "pulse-react-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@redux-saga/core": "^1.1.3",
    "@reduxjs/toolkit": "^1.6.2",
    "axios": "^0.24.0",
    "d3": "^7.6.1",
    "react": "^17.0.2",
    "react-apexcharts": "^1.4.0",
    "react-dark-mode-toggle": "^0.2.0",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.6",
    "react-router": "^5.2.1",
    "react-router-dom": "^5.3.0",
    "react-scripts": "^5.0.1",
    "recharts": "^2.1.9",
    "redux": "^4.1.2",
    "redux-devtools-extension": "^2.13.9",
    "redux-saga": "^1.1.3",
    "sass": "^1.44.0",
    "web-vitals": "^1.1.2"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.15.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "@types/jest": "^28.1.0",
    "@types/node": "^17.0.38",
    "@types/react": "^18.0.10",
    "@types/react-dom": "^18.0.5",
    "history": "^5.1.0",
    "jest-canvas-mock": "^2.3.1",
    "prop-types": "^15.7.2",
    "react-modal": "^3.14.4",
    "react-select-event": "^5.3.0",
    "redux-mock-store": "^1.5.4",
    "stylelint": "^14.1.0",
    "stylelint-config-standard-scss": "^3.0.0",
    "typescript": "^4.7.2"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "CI=false && react-scripts build",
    "test": "react-scripts test",
    "test:ci": "react-scripts test --watchAll=false --coverage",
    "lint": "npm run lint:js && npm run lint:scss",
    "lint:js": "eslint src/**/*.{js,jsx}",
    "lint:scss": "stylelint --config=.stylelintrc src/**/*.scss",
    "eject": "react-scripts eject"
  },
  "jest": {
    "transformIgnorePatterns": [
      "/node_modules/(?!d3|d3-array|internmap|delaunator|robust-predicates)"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/index.{js,jsx}",
      "!src/reportWebVitals.js",
      "!src/setupTests.js",
      "!src/tools/*.{js,jsx}",
      "!<rootDir>/node_modules/",
      "!src/**/*.stories.{js,jsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 75,
        "lines": 75,
        "statements": 75
      }
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "semi": "error",
      "quotes": [
        "error",
        "single"
      ],
      "comma-spacing": [
        "warn",
        {
          "after": true
        }
      ],
      "comma-dangle": [
        "error",
        "never"
      ],
      "max-len": [
        "warn",
        {
          "code": 140
        }
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "no-unused-vars": "warn",
      "no-console": 0,
      "react/self-closing-comp": "warn",
      "react/jsx-tag-spacing": [
        "error",
        {
          "beforeSelfClosing": "always"
        }
      ],
      "jsx-quotes": [
        "error",
        "prefer-double"
      ]
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
